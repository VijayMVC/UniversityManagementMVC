@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style>
        label.error {
            color: red;
            font-weight: bold;
        }
    </style>

</head>
<body>
    <div>
        <fieldset style="width:50%">
            <legend>Save Department</legend>
            <form id="saveDepartment" name="saveDepartment" method="post">
                @if (ViewBag.Message != null)
                {
                    <p>@ViewBag.Message</p>
                }
                <table>
                    <tr>
                        <td><label for="Department Code" />Department Code</td>
                        <td><input type="text" id="departmentCode" name="DepartmentCode" /></td>
                    </tr>
                    <tr>
                        <td><label for="Department Name" />Department Name</td>
                        <td><input type="text" id="departmentName" name="DepartmentName" /></td>

                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="submit" name="SaveDepartment" value="Save Department" style="float:right"></td>
                    </tr>
                </table>
            </form>
        </fieldset>

        



    </div>
    <script src="~/Scripts/jquery-2.2.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#saveDepartment").validate({
                rules: {
                    DepartmentCode: {
                        required: true,
                        maxlength: 7,
                        minlength:2
                    },
                    DepartmentName: {
                        required: true,
                       
                    }
                },
                messages: {
                    DepartmentCode: {
                        
                        required: "Please provide Department Code",
                        maxlength: "Maximum Length is 7",
                        minlength: "Mimimum Length is 2"
                    },
                    DepartmentName: {

                        required: "Please provide Department Name",
                       
                        
                    }
                }
            });

        });
    </script>

</body>
</html>
